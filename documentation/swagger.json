{
  "swagger": "2.0",
  "info": {
    "title": "LSM",
    "description": "LSM - an API for building a smart meter solution for lagos state government",
    "version": "1.0",
    "contact": {
      "email": "vic3coorpo@gmail.com"
    }
  },
  "host": "lsm-hack-staging.herokuapp.com",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "Welcome",
      "description": "welcome users"
    },
    {
      "name": "Auth",
      "description": "User authentication routes"
    }
  ],
  "schemes": ["https"],
  "paths": {
    "/": {
      "get": {
        "tags": ["Welcome"],
        "summary": "GET API endpoint for welcome page",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "welcome"
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "POST API endpoint for registering a new user",
        "produces": ["application/json"],
        "consumes": ["application/x-www-form-urlencoded"],
        "parameters": [
          {
            "name": "email",
            "in": "formData",
            "description": "email of the user",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "formData",
            "description": "users password",
            "required": true,
            "type": "string"
          },
          {
            "name": "meterNumber",
            "in": "formData",
            "description": "users unique meter ID",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Bad Request"
          },
          "409": {
            "description": "Duplicate error"
          },
          "500": {
            "description": "DB error"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "POST API endpoint for logging in user",
        "produces": ["application/json"],
        "consumes": ["application/x-www-form-urlencoded"],
        "parameters": [
          {
            "name": "email",
            "in": "formData",
            "description": "email of the user",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "formData",
            "description": "users password",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "DB error"
          }
        }
      }
    },
    "securityDefinitions": {
      "JWT": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    }
  }
}
